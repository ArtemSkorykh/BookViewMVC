@model IEnumerable<BookViewMVC.Models.Book>

<h1>Book Library</h1>

<a href="@Url.Action("Create", "Books")" class="btn btn-primary">Add New Book</a>

<table class="table">
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td><img src="@book.CoverImage" alt="@book.Title" width="100" /></td>             
                <td><a class="btn btn-primary" href="@Url.Action("Details", "Books", new { id = book.Id })">View Details</a></td>
            </tr>
        }
    </tbody>
</table>